# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration (Local MongoDB)
MONGODB_URL=mongodb://localhost:27017/user-service


# Keycloak Configuration
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=your-realm-name
KEYCLOAK_CLIENT_ID=your-client-id

# Public Key (Optional - only needed if JWKS fails)
# Get from: Keycloak Admin Console -> Realm Settings -> Keys -> RS256 -> Public Key
# Format should be: -----BEGIN PUBLIC KEY-----\n...key...\n-----END PUBLIC KEY-----
# Or just the key content (will be auto-formatted)
KEYCLOAK_PUBLIC_KEY=

# JWKS URL (Preferred - automatically fetches public keys)
KEYCLOAK_REALM_PUBLIC_KEY_URL=http://localhost:8080/realms/your-realm-name/protocol/openid-connect/certs

# JWT Configuration
JWT_ALGORITHM=RS256

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

